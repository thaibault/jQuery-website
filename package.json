{
  "name": "website-utilities",
  "version": "1.0.104",
  "license": "CC-BY-3.0",
  "description": "extend your web app",
  "homepage": "http://torben.website/websiteUtilities",
  "documentationWebsite": {
    "languages": [
      "deDE",
      "enUS"
    ],
    "name": "websiteUtilities",
    "tagline": "extend your web app<!--deDE:erweitere deine Webanwendung-->",
    "trackingCode": "UA-40192634-5"
  },
  "keywords": [
    "jquery",
    "website",
    "utilities"
  ],
  "files": [
    "index.js",
    "index.css",
    "index.compiled.css",
    "index.sh",
    "font",
    "font.compiled"
  ],
  "main": "index.compiled.js",
  "bin": {
    "websiteUtilities": "index.sh"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/thaibault/websiteUtilities"
  },
  "scripts": {
    "build": "webOptimizer build",
    "build:export": "webOptimizer build '{__reference__: \"export\"}'",
    "clear": "webOptimizer clear",
    "document": "webOptimizer document",
    "lint": "webOptimizer check:type; webOptimizer lint",
    "prepare": "npm run build",
    "serve": "webOptimizer serve",
    "start": "npm run serve",
    "test": "nyc npm run test:plain",
    "test:browser": "webOptimizer test:browser",
    "test:plain": "webOptimizer test",
    "update": "npm version patch && npm publish",
    "update:documentation": "documentationWebsite --log-level info",
    "watch": "webOptimizer build --watch"
  },
  "dependencies": {
    "bootstrap": "^3.3.7",
    "clientnode": "^3.0.45",
    "internationalisation": "^1.0.81",
    "jquery": "^3.2.1",
    "jquery.scrollto": "^2.1.2",
    "spin.js": "^3.1.0"
  },
  "peerDependencies": {
    "babel-runtime": "*"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.3",
    "babel-plugin-transform-proto-to-assign": "^6.23.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "coveralls": "^3.0.0",
    "documentation-website": "^1.0.128",
    "eslint": "^4.19.1",
    "eslint-config-google": "^0.9.1",
    "eslint-plugin-flowtype": "^2.46.3",
    "eslint-plugin-jsdoc": "^3.6.3",
    "flow-bin": "^0.70.0",
    "jsdoc": "^3.5.2",
    "nyc": "^11.7.1",
    "qunit": "^2.6.0",
    "stylelint": "^9.2.0",
    "weboptimizer": "^2.0.108",
    "webpack": "^4.6.0",
    "webpack-cli": "^2.0.14",
    "webpack-dev-server": "^3.1.3"
  },
  "webOptimizer": {
    "export": {
      "development": {
        "tool": false
      },
      "module": {
        "preprocessor": {
          "javaScript": {
            "options": {
              "plugins": {
                "__remove__": "transform-runtime"
              }
            }
          }
        }
      }
    },
    "injection": {
      "external": {
        "aliases": {
          "jQuery-scrollTo": "$.fn.scrollTo"
        },
        "implicit": {
          "pattern": {
            "exclude": {
              "__append__": [
                {
                  "__evaluate__": "/^clientnode\\/test(?:\\.compiled)?(?:\\.js)?$/"
                },
                {
                  "__evaluate__": "/^spin\\.js$/"
                }
              ]
            }
          }
        }
      }
    },
    "path": {
      "source": {
        "asset": {
          "font": "font/"
        }
      },
      "target": {
        "asset": {
          "font": "font.compiled/"
        }
      }
    },
    "module": {
      "optimizer": {
        "babelMinify": {
          "module": {
            "mangle": false
          }
        }
      },
      "preprocessor": {
        "javaScript": {
          "exclude": "!filePath.includes('spin.js') && isFilePathInDependencies(filePath)"
        }
      },
      "replacements": {
        "normal": {
          "^clientnode/test$": "clientnode/test.compiled.js",
          "^NOTE: Nested jquery requests wont be overwritten jquery$": "jquery/dist/jquery.min.js",
          "^jQuery-scrollTo$": "jquery.scrollto/jquery.scrollTo.min.js"
        }
      }
    }
  }
}
